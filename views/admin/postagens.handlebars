<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p><b>Slug: </b>{{slug}}</p>
            <p><b>Descrição: </b>{{descricao}}</p>
            <p><b>Conteúdo: </b>{{conteudo}}</p>
            <p><b>Categoria: </b>{{categoria.nome}}</p>
            <small><b>Data de criação: </b>{{data}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}"><button class= "btn btn-success mt-4">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar postagem</button>
            </form>
            {{!-- <a href="/admin/postagens/deletar/{{_id}}"><button class= "btn btn-danger mt-4">Editar postagem</button></a> --}}
        </div>
    </div>
{{else}}
<h4 class="mt-3">Nenhuma postagem registrada!</h4>
{{/each}}