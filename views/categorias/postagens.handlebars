{{#each postagens}}
<div class="card">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small><b>Data de publicação:</b>{{data}}</small>
    </div>
</div>
{{else}}
<h5>Nenhuma postagem registrada</h5>
{{/each}}